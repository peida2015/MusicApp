<h1>Add a track</h1>

<form action="<%= tracks_url %>" method="post">
  <%= auth_token %>
  <label>Track title</label>

  <input type="text" name="track[title]" value="">
  <label>Album</label>

  <select name="track[album_id]">
    <% Album.all.each do |album| %>
    <option value="<%= album.title %>" <%= "selected" if album.id == :album_id %> >
      <%= album.title %>
    </option>
    <% end %>
  </select>

  <label>Track type</label>
  <input type="radio" name="track[track_type]" value="regular">
  <input type="radio" name="track[track_type]" value="bonus">

  <label>Lyric</label>
  <input type="textarea" name="track[lyric]" value="">

  <input type="submit" name="" value="">

</form>
